<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="18dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Item 01"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_image"/>
    <TextView
        android:id="@+id/list_subscript1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by author name"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/list_subscript2"
        app:layout_constraintTop_toBottomOf="@+id/list_title" />

    <TextView
        android:id="@+id/list_subscript2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="#entertainment #sports #latest"
        android:textSize="12sp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toRightOf="@+id/list_subscript1"
        app:layout_constraintTop_toBottomOf="@+id/list_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
